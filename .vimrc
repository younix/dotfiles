" Basic
set nocompatible
set mouse=a

" format for line break
set fileformat=unix

" Formating
set backspace=2
set showmode

" numbered lines
set number

set ruler
set fileencoding=utf-8

" spellchecking
set nospell
set spelllang=en

map <S-PageDown> :tabnext<cr>
map <S-PageUp> :tabprevious<cr>

"map!  [1~
"map!  [4~
"map!  [3~
"
"map  [1~
"map  [4~
"map  [3~

syntax on

